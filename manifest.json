{
	"manifest_version": 3,
	"name": "頁面旋轉",
	"description": "旋轉頁面用",
	"version": "0.0.1",
	"action": {
		"default_icon": "icon_16x16.png",
		"default_popup": "popup.html",
		"default_title": "Page Rotator"
	},
	"permissions": [
		"activeTab",
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"js": ["execute.js"]
		}
	],
	"icons": {
		"16": "pexels_16x16.png",
		"48": "pexels_48x48.png",
		"128": "pexels_128x128.png"
	}
}